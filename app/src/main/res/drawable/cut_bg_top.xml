<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:drawable="#ffffff">
    </item>

    <item>
        <rotate
            android:fromDegrees="-20"
            android:pivotX="110%"
            android:pivotY="-10%">
            <shape
                android:shape="rectangle">
                <solid android:color="#bdd5fe" />

            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="20"
            android:pivotX="-5%"
            android:pivotY="10%">
            <shape
                android:shape="rectangle">
                <solid android:color="#e0ebff" />

            </shape>
        </rotate>
    </item>
</layer-list>
